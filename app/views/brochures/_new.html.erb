      <div class="container" id = "progressbar-container" style = "visibility: hidden; background-color: white; width:100%; height: 130%;">
          <h2>Working in Progress</h2>
          <div class="progress" style = "width : 90%;">
            <div class="progress-bar progress-bar-info progress-bar-striped" id = "progress-bar" role="progressbar"
            aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:0%;">
              0% Complete
            </div>
          </div>
       </div>
       <div class="container" id = "loadingbar-container" style = "background-color: white; width:100%; height: 130%;">
          <h2>Loading  <img id = "loadgif" src = "<%= image_url('loading.gif') %>" style = "width:60px;height: 60px;"> </h2>  
         
       </div>
      <section id="viewport">
          <canvas ng-show="started" id="canvas" style= "border: 1px solid #e7e7e7;"></canvas>
      </section>
      <div id="bottom-bar" ng-controller="ZoomController">
          <section class="zoom-container md-whiteframe-z1">
              <div class="current-zoom">{{ getCurrentZoom() }}%</div>
              <div class="zoom-slider">
                  <md-slider aria-label="zoom" step="1" ng-model="zoom" ng-init="zoom = 40; doZoom();" ng-change="doZoom()"  min="{{ minScale }}" max="{{ maxScale }}"></md-slider>
              </div>
              <div class="action-icons">
                  <i id = "zoomFit" ng-click="canvas.fitToScreen()" class="mdi mdi-filter-center-focus fit-to-screen"><md-tooltip md-delay="200">Fit to screen</md-tooltip></i>
                  <i id = "zoomOrigin" ng-click="canvas.zoom(1)" class="mdi mdi-fullscreen original-size"><md-tooltip md-delay="200">Original size</md-tooltip></i>
